---
import Layout from '../../layouts/Layout.astro';
import { getEntry } from 'astro:content';
import ProjectCard from '../../components/ProjectCard.astro';

const recladProject = await getEntry('projects', 'reclad-stockton');
---

<Layout 
  title="Industrial Buildings Projects | GBRS Services"
  description="Industrial building projects by GBRS Services Hartlepool. View our completed warehouses, workshops, and commercial structures."
  activePage="services"
>
 <section class="page-hero" id="main">
    <div class="hero-overlay">
      <h1>Industrial Buildings</h1>
      <p class="hero-subtitle">Robust steel-framed structures for your business needs</p>
      <div style="margin-top: 20px;">
        <a href="../../services.html" class="btn-secondary" style="background: rgba(255,255,255,0.2); border-color: white;">‚Üê Back to Services</a>
      </div>
    </div>
  </section>

  <section class="projects section">
    <div class="container">
      <div class="section-header">
        <h2>Industrial Projects</h2>
      </div>
      <p class="projects-intro">
        View our completed industrial building projects across the North East. From new builds to refurbishments,
        we deliver functional, durable structures tailored to your commercial and industrial requirements.
      </p>
      
      <div class="projects-grid-enhanced">
        <ProjectCard project={recladProject}>
            <ul class="project-highlights">
              <li>Full external reclad</li>
              <li>Improved insulation</li>
              <li>Modernized appearance</li>
              <li>Minimal business disruption</li>
            </ul>
        </ProjectCard>

        <div class="project-card" style="grid-column: 1 / -1; background: var(--light-grey); text-align: center; padding: 60px 20px;">
          <h3 style="margin-bottom: 15px; color: #333;">More Projects Coming Soon</h3>
          <p style="margin-bottom: 25px; color: #666;">We're currently updating our portfolio with 120+ completed projects. Check back soon or contact us to discuss your requirements.</p>
          <a href="../../index.html#contact" class="btn-primary">Get a Free Quote</a>
        </div>
      </div>
    </div>
  </section>
</Layout>
