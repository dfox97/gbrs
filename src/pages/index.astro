---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
import HeroOverlay from '../components/HeroOverlay.astro';
import FeaturedProjects from '../components/FeaturedProjects.astro';
import { Image } from 'astro:assets';


// Service Card Images
import agImg from '../assets/projects/agricultural/project-1-agricultural_building_1.jpg';
import indImg from '../assets/projects/industrial/Industrial_building_1.jpg';
import groundImg from '../assets/projects/groundworks/Groundworks_4.jpg';
import steelImg from '../assets/projects/steel-erection/Project-2-steel_erection_building_5.jpg';
---

<Layout 
  title="GBRS Services | Agricultural & Industrial Construction Hartlepool | Foundations to Finish"
  description="GBRS Services Ltd – family-run construction experts in Hartlepool & North East UK. Specialists in agricultural & industrial steel buildings, groundworks, and complete build solutions. 40+ years experience."
  structuredData={true}
  activePage="home"
>
  <!-- HERO -->
  <HeroOverlay />

  <!-- ABOUT PREVIEW -->
  <section id="about" class="about section">
    <div class="container">
      <div class="about-content">
        <div class="section-header">
          <span class="section-tag">Since 2022</span>
          <h2>Who We Are</h2>
        </div>
        <p class="lead-text">
          <strong>GBRS Services Ltd</strong> is a trusted, family-run construction business proudly serving 
          <strong>Hartlepool, County Durham, and the wider North East</strong>. 
        </p>
        <p>
          With over <strong>40 years of combined hands-on experience</strong>, we handle every stage of your 
          construction project - from initial <em>groundworks to final finishes</em>.
        </p>
        <p>
          We specialise in <strong>agricultural and industrial steel buildings</strong>, offering comprehensive 
          services including foundations, steel erection, sheeting, cladding, and civil engineering works.
        </p>
        
        <div class="about-features">
          <div class="feature-item">
            <span class="feature-icon">✓</span>
            <div>
              <h3>40+ Years Experience</h3>
              <p>Proven expertise in agricultural & industrial construction</p>
            </div>
          </div>
          <div class="feature-item">
            <span class="feature-icon">✓</span>
            <div>
              <h3>Family-Run Business</h3>
              <p>Personal service and attention to every project</p>
            </div>
          </div>
          <div class="feature-item">
            <span class="feature-icon">✓</span>
            <div>
              <h3>Complete In-House</h3>
              <p>All work done by our skilled team, no subcontractors</p>
            </div>
          </div>

          <div class="feature-item">
            <span class="feature-icon">✓</span>
            <div>
              <h3>Local to North East</h3>
              <p>Based in Hartlepool, serving County Durham & beyond</p>
            </div>
          </div>
        </div>
        
        <div style="text-align: center; margin-top: 40px;">
          <a href="/about" class="btn-primary">Learn More About Our Team</a>
        </div>
      </div>
    </div>
  </section>

  <!-- SERVICES PREVIEW -->
  <section id="services" class="services section">
    <div class="container">
      <div class="section-header">
        <span class="section-tag">What We Do</span>
        <h2>Our Services</h2>
      </div>
      <p class="services-intro">
        GBRS provides end-to-end construction services throughout Hartlepool and the North East, 
        specialising in agricultural and industrial projects. Everything is handled in-house by our 
        experienced team, ensuring consistent quality from start to finish.
      </p>

      <div class="service-grid">
        <a href="/services#agricultural" class="service-card service-card-link">
          <Image src={agImg} alt="Modern agricultural steel building construction in Hartlepool" width={400} height={300} />
          <div class="service-content">
            <h3>Agricultural Buildings</h3>
            <p>Complete steel-framed buildings for farms and agricultural facilities.</p>
          </div>
        </a>
        
        <a href="/services#industrial" class="service-card service-card-link">
          <Image src={indImg} alt="Industrial buildings and warehouses" width={400} height={300} />
          <div class="service-content">
            <h3>Industrial Buildings</h3>
            <p>Warehouses, workshops, and commercial steel structures.</p>
          </div>
        </a>
        
        <a href="/services#groundworks" class="service-card service-card-link">
          <Image src={groundImg} alt="Groundworks and civil engineering" width={400} height={300} />
          <div class="service-content">
            <h3>Groundworks & Civils</h3>
            <p>Foundations, drainage, and civil engineering works.</p>
          </div>
        </a>
        
        <a href="/services#steel" class="service-card service-card-link">
          <Image src={steelImg} alt="Steel erection and cladding" width={400} height={300} />
          <div class="service-content">
            <h3>Steel Erection & Cladding</h3>
            <p>Expert steel frame erection and cladding services.</p>
          </div>
        </a>
      </div>
      <div style="text-align: center; margin-top: 40px;">
        <a href="/services" class="btn-primary">View All Services</a>
      </div>
    </div>
  </section>

  <FeaturedProjects />
  <ContactForm />
</Layout>
