---
// Contact Form Component
---

<section id="contact" class="contact section">
  <div class="container">
    <div class="section-header">
      <span class="section-tag">Let's Talk</span>
      <h2>Get Your Free Quote</h2>
    </div>
    <p>Ready to start your next project in Hartlepool or the North East? Contact us today for a no-obligation quote.</p>

    <div class="contact-wrapper">
      <!-- Contact Form -->
      <div class="form-wrapper">
        <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" id="contact-form" class="contact-form">
          <input type="hidden" name="form-name" value="contact">
          
          <!-- Honeypot for spam prevention -->
          <p class="sr-only">
            <label>Don't fill this out if you're human: <input name="bot-field" /></label>
          </p>
          
          <div class="form-group">
            <label for="name">Your Name *</label>
            <input type="text" id="name" name="name" required aria-required="true">
          </div>
          
          <div class="form-group">
            <label for="email">Your Email *</label>
            <input type="email" id="email" name="email" required aria-required="true">
          </div>
          
          <div class="form-group">
            <label for="phone">Phone Number (optional)</label>
            <input type="tel" id="phone" name="phone">
          </div>
          
          <div class="form-group">
            <label for="message">Message Details *</label>
            <textarea id="message" name="message" required aria-required="true" rows="5"></textarea>
          </div>
          
          <div data-netlify-recaptcha="true"></div>

          <button type="submit" class="btn-primary">Send Message</button>
        </form>
        <p id="form-success" class="form-success" role="status" aria-live="polite"></p>
      </div>
      
      <!-- Google Map -->
      <div class="map">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1153.2005206423394!2d-1.2936862607890027!3d54.68497004368669!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x487e8ca5fce1ff7b%3A0x28c2e750db3f8c54!2sElwick%2C%20Hartlepool%20TS27%203ED!5e0!3m2!1sen!2suk!4v1760904193657!5m2!1sen!2suk"
          width="100%" 
          height="100%" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="GBRS Services location - Elwick, Hartlepool TS27 3ED">
        </iframe>
      </div>
    </div>
    
    <div class="contact-info">
      <div class="contact-method">
        <strong>
          <svg class="contact-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
          </svg>
          Email:
        </strong>
        <a href="mailto:gbrsltd@gmail.com">gbrsltd@gmail.com</a>
      </div>
      <div class="contact-method">
        <strong>
          <svg class="contact-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
          </svg>
          Phone:
        </strong>
        <a href="tel:07555804062">07555 804062</a>
      </div>
      <div class="contact-method">
        <strong>
          <svg class="contact-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
          </svg>
          Address:
        </strong>
        North farm, The Green, Elwick, Hartlepool TS27 3ED
      </div>
    </div>
  </div>
</section>
