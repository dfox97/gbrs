---
let { btnText = 'Get a Free Quote' } = Astro.props;
---
<a href="tel:07555804062" class="btn-primary btn-call">
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white" width="20" height="20">
    <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
  </svg>
  Call: 07555 804062
</a>

<style>
.btn-primary{background:var(--primary);color:#fff;padding:14px 32px;border:none;border-radius:6px;font-weight:600;font-size:1rem;text-decoration:none;transition:all 0.3s ease;cursor:pointer;display:inline-block;min-height:48px;min-width:140px;text-align:center;box-shadow:0 4px 12px rgba(243,111,33,0.2);} 
.btn-primary:hover{background:var(--primary-dark);transform:translateY(-2px);box-shadow:0 6px 16px rgba(243,111,33,0.35);} 
.btn-secondary{background:white;color:var(--primary);padding:14px 32px;border:2px solid white;border-radius:6px;font-weight:600;font-size:1rem;text-decoration:none;transition:all 0.3s ease;cursor:pointer;display:inline-block;min-height:48px;min-width:140px;text-align:center;} 
.btn-secondary:hover{background:transparent;color:white;transform:translateY(-2px);} 
.btn-call{display:flex;align-items:center;gap:10px;} 
.btn-call svg{fill:white;} 
</style>

<a href="/#contact" class="btn-secondary">{btnText}</a>
