---
interface Props {
  tag?: string;
  title: string;
}
const { tag, title } = Astro.props;
---
<div class="section-header">
  {tag && <span class="section-tag">{tag}</span>}
  <h2>{title}</h2>
</div>
<style>
.section-header{text-align:center;margin-bottom:30px;}
.section-tag{display:inline-block;background:var(--primary);color:white;padding:4px 10px;border-radius:4px;font-size:.85rem;margin-bottom:10px;}
h2{font-size:2rem;color:#111;margin:0;}
@media(min-width:768px){h2{font-size:2.4rem;}}
</style>