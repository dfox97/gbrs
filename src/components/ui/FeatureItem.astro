---
interface Props {
  icon?: string;
  title: string;
  text: string;
}
const { icon = 'âœ“', title, text } = Astro.props;
---
<div class="feature-item">
  <span class="feature-icon">{icon}</span>
  <div>
    <h3>{title}</h3>
    <p>{text}</p>
  </div>
</div>
<style>
.feature-item{display:flex;gap:15px;padding:20px;background:white;border-radius:8px;box-shadow:0 2px 8px rgba(0,0,0,0.08);} 
.feature-icon{font-size:1.5rem;color:var(--primary);} 
.feature-item h3{font-size:1.1rem;margin-bottom:6px;color:var(--primary);} 
.feature-item p{font-size:.95rem;margin:0;color:#666;} 
</style>